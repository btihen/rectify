<div class="column is-half is-offset-one-quarter">
  <h3 class="title has-text-grey">Signup</h3>
  <p class="subtitle has-text-grey">Please complete the form to proceed.</p>
  <div class="box">
    <form>
      <div class="field">
        <div class="control">
          <input class="input is-large" type="text" placeholder="Your First Name" autofocus="">
        </div>
      </div>
      <div class="field">
        <div class="control">
          <input class="input is-large" type="text" placeholder="Your Last Name">
        </div>
      </div>
      <div class="field">
        <div class="control">
          <input class="input is-large" type="email" placeholder="Your Email" autofocus="">
        </div>
      </div>

      <div class="field">
        <div class="control">
          <input class="input is-large" type="password" placeholder="Your Password">
        </div>
      </div>

      <div class="field">
        <div class="control">
          <input class="input is-large" type="password_confirmation" placeholder="Your Password Confirmation">
        </div>
      </div>

      <div class="field">
        <label class="checkbox">
          <input type="checkbox">
            I agree to the Terms and Conditions
        </label>
      </div>

      <button class="button is-block is-info is-large is-fullwidth">
        <a href="/users/sign_in" class="button is-info">
          Sign up
        </a>
      </button>
    </form>
  </div>
  <p class="has-text-grey">
    <a href="../">Sign Up</a> &nbsp;·&nbsp;
    <a href="../">Forgot Password</a> &nbsp;·&nbsp;
    <a href="../">Need Help?</a>
  </p>
</div>
